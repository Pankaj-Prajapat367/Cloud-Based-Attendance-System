<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Students</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body { background-color: #f8f9fa; padding: 20px; }
    .card { border-radius: 12px; box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1); }
    .table th { background-color: #f1f1f1; }
  </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/manage/students">
                <i class="fas fa-calendar-check me-2"></i>Attendance System
            </a>
            <div class="d-flex">
                <a href="/login" class="btn btn-outline-light">
                    <i class="fas fa-sign-out-alt me-1"></i> Logout
                </a>
            </div>
        </div>
    </nav>
  <div class="container">
    <h1 class="my-4"><i class="fas fa-users me-2"></i>Manage Students</h1>

    <div class="card p-4 mb-4">
      <h5>Add New Student</h5>
      <form method="POST" action="/manage/students">
        <div class="row g-2">
          <div class="col-md-3"><input name="name" class="form-control" placeholder="Name" required></div>
          <div class="col-md-2"><input name="er_number" class="form-control" placeholder="ER Number" required></div>
          <div class="col-md-3"><input name="email" class="form-control" placeholder="Email" required></div>
          <div class="col-md-2"><input name="batch" class="form-control" placeholder="Batch ID" required></div>
          <div class="col-md-2"><button class="btn btn-primary w-100">Add</button></div>
        </div>
      </form>
    </div>

    <div class="card p-4">
      <h5 class="mb-3">All Students</h5>
      <table class="table table-bordered">
        <thead><tr><th>Name</th><th>ER Number</th><th>Email</th><th>Batch</th></tr></thead>
        <tbody>
          <% students.forEach(s => { %>
            <tr>
              <td><%= s.name %></td>
              <td><%= s.er_number %></td>
              <td><%= s.email %></td>
              <td><%= s.batch %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
