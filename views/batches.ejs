<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Batch Management</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .batch-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            overflow: hidden;
        }
        .batch-header {
            background-color: #f1f1f1;
            padding: 15px 20px;
            border-bottom: 1px solid #ddd;
        }
        .student-table {
            width: 100%;
        }
        .student-table th {
            background-color: #f8f9fa;
        }
        .student-name-link {
            color: #0d6efd;
            text-decoration: none;
            font-weight: 500;
        }
        .student-name-link:hover {
            text-decoration: underline;
            color: #0b5ed7;
        }
        .success-message {
            background-color: #d4edda;
            color: #155724;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .page-header {
            border-bottom: 1px solid #eee;
            padding-bottom: 15px;
            margin-bottom: 30px;
        }
        .batch-badge {
            font-size: 0.8rem;
            vertical-align: middle;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="page-header">
                    <h1 class="mb-3">
                        <i class="fas fa-users me-2"></i>
                        Batch Management
                    </h1>
                    <p class="text-muted">View and manage student batches</p>
                </div>
                
                <% if (success) { %>
                    <div class="success-message">
                        <i class="fas fa-check-circle me-2"></i>
                        <%= success %>
                    </div>
                <% } %>

                <% if (batches.length > 0) { %>
                    <% batches.forEach(batch => { %>
                        <div class="batch-card">
                            <div class="batch-header">
                                <h3 class="mb-0">
                                    <i class="fas fa-users-class me-2"></i>
                                    <%= batch.name %>
                                    <span class="badge bg-primary batch-badge ms-2">
                                        <%= batch.students.length %> student<%= batch.students.length !== 1 ? 's' : '' %>
                                    </span>
                                </h3>
                            </div>
                            
                            <div class="p-4">
                                <table class="table student-table">
                                    <thead>
                                        <tr>
                                            <th width="20%">ER Number</th>
                                            <th width="80%">Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (batch.students.length > 0) { %>
                                            <% batch.students.forEach(student => { %>
                                                <tr>
                                                    <td><%= student.er_number %></td>
                                                    <td>
                                                        <form action="/student-dashboard" method="POST" style="display: inline;">
                                                            <input type="hidden" name="studentId" value="<%= student._id %>">
                                                            <button type="submit" class="btn btn-link p-0 border-0 bg-transparent student-name-link">
                                                                <%= student.name %>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="2" class="text-center text-muted">
                                                    No students in this batch
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        No batches found. Please create some batches first.
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and Font Awesome -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
</body>
</html>